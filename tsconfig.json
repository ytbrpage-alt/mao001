{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "dom",
            "dom.iterable",
            "ES2020"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@/components/*": [
                "./src/components/*"
            ],
            "@/hooks/*": [
                "./src/hooks/*"
            ],
            "@/lib/*": [
                "./src/lib/*"
            ],
            "@/types/*": [
                "./src/types/*"
            ],
            "@/data/*": [
                "./src/data/*"
            ],
            "@/contexts/*": [
                "./src/contexts/*"
            ],
            "@/stores/*": [
                "./src/stores/*"
            ]
        },
        "baseUrl": "."
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}